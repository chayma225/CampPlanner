<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F7F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_up"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2D3748"
            android:contentDescription="Retour"
            android:layout_marginBottom="16dp" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/tent"
                android:tint="@color/primary"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CampPlanner"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bon retour !"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A202C"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connectez-vous à votre compte pour continuer"
            android:textSize="14sp"
            android:textColor="#718096"
            android:layout_marginBottom="32dp" />

        <!-- Tab Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/tab_background"
            android:padding="4dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tab_login"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Connexion"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/tab_selected"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tab_register"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Inscription"
                android:textSize="14sp"
                android:textColor="#718096"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Login Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Email Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="8dp" />

            <!-- Email Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7FAFC"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_people"
                        android:tint="#A0AEC0"
                        android:contentDescription="Email" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="votre@email.com"
                        android:textSize="15sp"
                        android:textColor="#2D3748"
                        android:textColorHint="#A0AEC0"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="12dp"
                        android:padding="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="8dp" />

            <!-- Password Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7FAFC"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#A0AEC0"
                        android:contentDescription="Password" />

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="••••••••"
                        android:textSize="15sp"
                        android:textColor="#2D3748"
                        android:textColorHint="#A0AEC0"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="12dp"
                        android:padding="0dp" />

                    <ImageButton
                        android:id="@+id/btn_toggle_password"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="#A0AEC0"
                        android:contentDescription="Toggle password" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Remember Me & Forgot Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp">

                <CheckBox
                    android:id="@+id/checkbox_remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Se souvenir de moi"
                    android:textSize="13sp"
                    android:textColor="#4A5568"
                    android:layout_marginStart="-8dp" />

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe oublié ?"
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Se connecter"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_primary_rounded"
                android:elevation="2dp"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E2E8F0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OU CONTINUEZ AVEC"
                    android:textSize="11sp"
                    android:textColor="#A0AEC0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E2E8F0" />

            </LinearLayout>

            <!-- Social Login Buttons -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_gooogle"
                        android:contentDescription="Google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_facebook"
                        android:contentDescription="Facebook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Terms -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En vous connectant, vous acceptez nos conditions d'utilisation"
                android:textSize="11sp"
                android:textColor="#A0AEC0"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>