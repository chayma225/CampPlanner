<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/entry_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Photo"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <TextView
                android:id="@+id/entry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de l'entrée"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small">

                <TextView
                    android:id="@+id/entry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@android:drawable/ic_menu_today"
                    android:drawablePadding="@dimen/margin_small"
                    android:drawableTint="@color/text_secondary" />

                <TextView
                    android:id="@+id/entry_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lieu"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="@dimen/margin_small"
                    android:drawableTint="@color/text_secondary"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/entry_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contenu de l'entrée..."
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/margin_medium"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>