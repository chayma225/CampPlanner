<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Équipement"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btnNewList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Nouvelle liste"
                android:textColor="#FFFFFF"
                android:backgroundTint="#10A37F"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Préparez vos listes"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <!-- Spinner pour les listes -->
        <Spinner
            android:id="@+id/spinner_Lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- RecyclerView for Equipment -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/equipment_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <Button
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⬇ Exporter"
                android:textColor="#10A37F"
                android:backgroundTint="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnManageList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⚙ Gérer la liste"
                android:textColor="#FFFFFF"
                android:backgroundTint="#10A37F"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
