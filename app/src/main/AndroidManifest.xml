<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"

    android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/tent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/roundedgreen"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- SplashActivity : activité de démarrage -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">

        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true" />
        <!-- RegisterActivity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- PlanningActivity -->
        <activity
            android:name=".activities.PlanningActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <!-- BudgetActivity -->
        <activity
            android:name=".activities.BudgetActivity"
            android:exported="true" />

        <!-- ReservationActivity -->
        <activity
            android:name=".activities.ReservationActivity"
            android:exported="true" />

        <!-- EquipmentActivity -->
        <activity
            android:name=".activities.EquipmentActivity"
            android:exported="true" />

        <!-- JournalActivity -->
        <activity
            android:name=".activities.JournalActivity"
            android:exported="true" />

        <!-- MeteoActivity -->
        <activity
            android:name=".activities.MeteoActivity"
            android:exported="true" />




    </application>

</manifest>
